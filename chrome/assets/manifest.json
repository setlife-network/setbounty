{
    "manifest_version": 2,
    "name": "SetBounty",
    "description": "Fund open-source projects",
    "version": "0.1",

    "browser_action": {
        // "default_icon": "icon.png",
        "default_title": "SetBounty"
    },
    
    "background": {
        "scripts": ["background.js"]
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "web_accessible_resources": [
    ],
    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab"
    ]

    // "icons": { "16": "icon16.png",
    //            "48": "icon48.png",
    //           "128": "icon128.png" }
}